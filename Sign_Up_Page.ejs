  <head>
    <title>Sign Up Page</title>
  </head>
  <body>
    <p class="logo">ePaint</p>
    <div class="blue-rectangle"></div>
    <div class="black-rectangle"></div>
    <header class="main_title">Sign Up Page</header>

    <form>
      <p class="Email_title">Email:</p>
      <input class="Email_field" type="email" placeholder="Type your Email" />

      <p class="Username_title">Username:</p>
      <input
      class="Username_field"
      type="text"
      placeholder="Type your Username"
      />

      <p class="Password_title">Password:</p>
      <input
      class="Password_field"
      type="password"
      placeholder="Type your Password"
      />

      <button class="btn1">Sign Up</button>

    </form>


    <script src="../src/signup.js"></script>
    

  </body>
</html>
